{
  "name": "pegasus",
  "version": "1.1.8",
  "description": "The official Pegasus app",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder --win",
    "build-only": "tsc && electron-builder --win --publish never",
    "publish-local": "dotenv -- cross-env-shell \"electron-builder --win --publish always\""
  },
  "build": {
    "appId": "com.pegasus.pegasus",
    "productName": "Pegasus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "ashiqtasdid",
      "repo": "pegsus_app",
      "private": false
    },
    "generateUpdatesFilesForAllChannels": true,
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^22.14.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "electron-log": "^5.0.2",
    "electron-updater": "^6.6.2"
  }
}