{
  "name": "pegasus",
  "version": "1.0.7",
  "description": "The official Pegasus app",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder --win",
    "build-only": "tsc && electron-builder --win --publish never",
    "publish-local": "dotenv -- cross-env-shell \"electron-builder --win --publish always\""
  },
  "build": {
    "appId": "com.pegasus.pegasus",
    "productName": "Pegasus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "ashiqtasdid",
      "repo": "pegsus_app",
      "private": false
    },
    "generateUpdatesFilesForAllChannels": true,
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  }
}